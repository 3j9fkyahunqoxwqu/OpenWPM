{
  "name": "OpenWPM",
  "description": "OpenWPM WebExtension",
  "version": "0.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "node_modules/socket.io-client/socket.io.js",
      "background.js"
    ]
  },
  "icons": {
    "48": "cctv.png",
    "96": "cctv.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "data/content.js"
      ]
    }
  ],
  "permissions": [
    "cookies",
    "tabs",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ]
}
